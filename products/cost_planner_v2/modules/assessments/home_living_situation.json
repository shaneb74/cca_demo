{
  "key": "home_living_situation",
  "title": "Home & Living Situation",
  "icon": "üè†",
  "description": "Housing costs and home ownership details for {NAME}",
  "estimated_time": "2-3 min",
  "required": false,
  "sort_order": 6,
  "sections": [
    {
      "id": "intro",
      "type": "intro",
      "title": "Housing & Living Situation",
      "icon": "üè†",
      "help_text": "Let's understand {NAME_POS} housing situation to plan for care costs.",
      "fields": [],
      "info_boxes": [
        {
          "type": "info",
          "content": "This helps us determine housing costs for in-home care, and whether home equity could fund care if needed."
        }
      ]
    },
    {
      "id": "housing_status",
      "title": "Current Housing",
      "icon": "üè†",
      "layout": "single_column",
      "fields": [
        {
          "key": "housing_type",
          "label": "Does {NAME} currently own or rent their home?",
          "type": "radio",
          "required": false,
          "options": [
            {
              "value": "own",
              "label": "Own a home"
            },
            {
              "value": "rent",
              "label": "Rent"
            },
            {
              "value": "other",
              "label": "Other (living with family, assisted living, etc.)"
            }
          ],
          "default": "own"
        }
      ],
      "info_boxes": []
    },
    {
      "id": "homeowner_costs",
      "title": "Monthly Housing Costs",
      "icon": "üí∞",
      "layout": "single_column",
      "visible_if": {
        "section": "housing_status",
        "field": "housing_type",
        "equals": "own"
      },
      "fields": [
        {
          "key": "use_zip_estimate_owner",
          "label": "Do you know {NAME_POS} total monthly housing costs?",
          "type": "radio",
          "required": false,
          "options": [
            {
              "value": "yes_i_know",
              "label": "Yes, I know the costs"
            },
            {
              "value": "no_estimate",
              "label": "No - use estimate for my ZIP code"
            }
          ],
          "default": "no_estimate",
          "help": "Include mortgage, property taxes, insurance, utilities, and maintenance"
        },
        {
          "key": "monthly_housing_costs_owner",
          "label": "Total Monthly Housing Costs",
          "type": "currency",
          "required": false,
          "min": 0,
          "max": 50000,
          "step": 100,
          "default": 0,
          "help": "All housing costs: mortgage, taxes, insurance, utilities, maintenance, HOA",
          "visible_if": {
            "field": "use_zip_estimate_owner",
            "equals": "yes_i_know"
          }
        }
      ],
      "info_boxes": []
    },
    {
      "id": "homeowner_equity",
      "title": "Home Equity",
      "icon": "üè°",
      "layout": "single_column",
      "visible_if": {
        "section": "housing_status",
        "field": "housing_type",
        "equals": "own"
      },
      "fields": [
        {
          "key": "home_equity",
          "label": "Estimated Home Equity",
          "type": "currency",
          "required": false,
          "min": 0,
          "max": 10000000,
          "step": 25000,
          "default": 0,
          "help": "Current home value minus outstanding mortgage balance (enter 0 if not sure)"
        },
        {
          "key": "home_plan",
          "label": "If {NAME} needs care, what's the plan for the home?",
          "type": "radio",
          "required": false,
          "options": [
            {
              "value": "keep_stay",
              "label": "Stay in the home with in-home care"
            },
            {
              "value": "sell",
              "label": "Sell the home to fund care costs"
            },
            {
              "value": "keep_rent",
              "label": "Keep the home and rent it out"
            },
            {
              "value": "uncertain",
              "label": "Not sure yet"
            }
          ],
          "default": "uncertain"
        }
      ],
      "info_boxes": [
        {
          "type": "tip",
          "content": "üí° Home equity can be a valuable resource for funding care. If staying home, the monthly costs continue. If moving to a facility, selling or renting provides funds."
        }
      ]
    },
    {
      "id": "renter_costs",
      "title": "Monthly Rental Costs",
      "icon": "üí∞",
      "layout": "single_column",
      "visible_if": {
        "section": "housing_status",
        "field": "housing_type",
        "equals": "rent"
      },
      "fields": [
        {
          "key": "use_zip_estimate_renter",
          "label": "Do you know {NAME_POS} total monthly rent and household costs?",
          "type": "radio",
          "required": false,
          "options": [
            {
              "value": "yes_i_know",
              "label": "Yes, I know the costs"
            },
            {
              "value": "no_estimate",
              "label": "No - use estimate for my ZIP code"
            }
          ],
          "default": "no_estimate",
          "help": "Include rent, renter's insurance, and utilities"
        },
        {
          "key": "monthly_housing_costs_renter",
          "label": "Total Monthly Rental Costs",
          "type": "currency",
          "required": false,
          "min": 0,
          "max": 25000,
          "step": 100,
          "default": 0,
          "help": "Total: rent + insurance + utilities not included in rent",
          "visible_if": {
            "field": "use_zip_estimate_renter",
            "equals": "yes_i_know"
          }
        },
        {
          "key": "lease_status",
          "label": "Lease Status",
          "type": "radio",
          "required": false,
          "options": [
            {
              "value": "month_to_month",
              "label": "Month-to-month"
            },
            {
              "value": "active_lease",
              "label": "Active lease with time remaining"
            },
            {
              "value": "section8",
              "label": "Section 8 / subsidized housing"
            }
          ],
          "default": "month_to_month"
        },
        {
          "key": "rental_plan",
          "label": "If {NAME} needs care, what's the plan?",
          "type": "radio",
          "required": false,
          "options": [
            {
              "value": "keep_in_home",
              "label": "Keep renting and receive in-home care"
            },
            {
              "value": "end_lease",
              "label": "End the lease when moving to a facility"
            },
            {
              "value": "uncertain",
              "label": "Not sure yet"
            }
          ],
          "default": "uncertain"
        }
      ],
      "info_boxes": [
        {
          "type": "tip",
          "content": "üí° If {NAME} receives in-home care, rent continues. If moving to a facility, ending the lease frees up those funds for care."
        }
      ]
    }
  ],
  "calculations": {
    "total_monthly_housing_costs": {
      "type": "conditional",
      "description": "Total monthly housing costs based on ownership status",
      "logic": "Use monthly_housing_costs_owner if owner, monthly_housing_costs_renter if renter, or ZIP estimate if selected"
    }
  },
  "field_types": {
    "housing_type": "string",
    "use_zip_estimate_owner": "string",
    "monthly_housing_costs_owner": "number",
    "home_equity": "number",
    "home_plan": "string",
    "use_zip_estimate_renter": "string",
    "monthly_housing_costs_renter": "number",
    "lease_status": "string",
    "rental_plan": "string"
  }
}
